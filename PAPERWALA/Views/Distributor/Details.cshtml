@model IEnumerable<PAPERWALA.Models.DistributorDTO>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Distributor Name List</h5>
                    <span>Here you can see all Distributor </span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3>  Distributor List  | <span> @Html.ActionLink("Create Distributor ", "Create", "Distributor", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Distributor Name</th>
                                <th>Mobile</th>
                                <th>Address</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Pin</th>
                                <th>Birthday</th>
                                @*<th>Balance AMT </th>*@
                                <th>Edit</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DistributorName</td>
                                        <td>@item.MobileNo</td>
                                        <td>@item.Address</td>
                                        <td>@item.StateName</td>
                                        <td>@item.CityName</td>
                                        <td>@item.Pincode</td>
                                        <td>@item.DateofBirth</td>
                                        @*<td>@item.RemainingAMT</td>*@


                                        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.DistributorId })</td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.DistributorId }, new { onclick = "return confirm('Are you sure you wish to delete this Distributor?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

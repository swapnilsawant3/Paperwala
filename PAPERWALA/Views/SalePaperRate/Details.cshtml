@model IEnumerable<PAPERWALA.Models.SalePaperRateDTO>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Sale Paper Name with Rate List</h5>
                    <span>Here you can see all Sale Paper with Rate and cityes with state</span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3> Sale Paper Rate List  | <span> @Html.ActionLink("Create Sale Paper Rate ", "Create", "SalePaperRate", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Paper Name</th>
                                <th>State Name</th>
                                <th>City Name</th>
                                <th>Mon</th>
                                <th>Tue</th>
                                <th>Wed</th>
                                <th>Thu</th>
                                <th>Fri</th>
                                <th>Sat</th>
                                <th>Sun</th>
                                <th>Edit</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PaperName</td>
                                        <td>@item.StateName</td>
                                        <td>@item.CityName</td>
                                        <td>@item.MondayRate</td>
                                        <td>@item.TuesdayRate</td>
                                        <td>@item.WednesdayRate</td>
                                        <td>@item.ThursdayRate</td>
                                        <td>@item.FridayRate</td>
                                        <td>@item.SaturdayRate</td>
                                        <td>@item.SundayRate</td>

                                        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.SalePaperRateId })</td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.SalePaperRateId }, new { onclick = "return confirm('Are you sure you wish to delete this Sale Paper Rate?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



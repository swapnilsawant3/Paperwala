@model IEnumerable<PAPERWALA.Models.CityDTO>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>City Name List</h5>
                    <span>Here you can see all cityes with state</span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3> City Name List  | <span> @Html.ActionLink("Create City", "Create", "City", new { @class = "btn btn-info btn-success" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>City Name</th>
                                <th>State Name</th>
                                <th>Edit</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CityName</td>
                                        <td>@item.StateName</td>
                                        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.CityId })</td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.CityId }, new { onclick = "return confirm('Are you sure you wish to delete this City?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


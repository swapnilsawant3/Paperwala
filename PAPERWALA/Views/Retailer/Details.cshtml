@model IEnumerable<PAPERWALA.Models.RetailerDTO>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Retailer Name List</h5>
                    <span>Here you can see all Retailers </span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3>  Retailer List  | <span> @Html.ActionLink("Create Retailer ", "Create", "Retailer", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Retailer Name</th>
                                <th>Mobile</th>
                                <th>Address</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Pin</th>
                                <th>Birthday</th>
                                <th>Balance AMT </th>
                                <th>Edit</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RetailerName</td>
                                        <td>@item.MobileNo</td>
                                        <td>@item.RetailerAddress</td>
                                        <td>@item.StateName</td>
                                        <td>@item.CityName</td>
                                        <td>@item.Pincode</td>
                                        <td>@item.DateofBirth.ToShortDateString()</td>
                                        <td>@item.RemainingAMT</td>


                                        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.RetailerId })</td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.RetailerId }, new { onclick = "return confirm('Are you sure you wish to delete this Retailer?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

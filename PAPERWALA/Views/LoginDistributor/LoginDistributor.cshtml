<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Login Distributor</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    

    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/Template/plugins/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Template/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Template/plugins/ionicons/dist/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Template/plugins/icon-kit/dist/css/iconkit.min.css">
    <link rel="stylesheet" href="~/Template/plugins/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/Template/dist/css/theme.min.css">
    <script src="~/Template/src/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <div class="auth-wrapper">
        <div class="container-fluid h-100">
            <div class="row flex-row h-100 bg-white">
                <div class="col-xl-8 col-lg-6 col-md-5 p-0 d-md-block d-lg-block d-sm-none d-none">
                    <div class="lavalite-bg" style="background-image: url('../../Template/img/auth/login-bg.jpg')">
                        <div class="lavalite-overlay"></div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6 col-md-7 my-auto p-0">
                    <div class="authentication-form mx-auto">
                        <div class="logo-centered">
                            <a href="~/Template/index.html"><img src="~/Template/src/img/brand.svg" alt=""></a>
                        </div>
                        <h3>Sign In to PAPAERWALA</h3>
                        <p>Happy to see you again!</p>
                        @using (Html.BeginForm())
            {
                            @Html.AntiForgeryToken()
                            
                           
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.UserName)*@
                                    @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Username", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                    <i class="ik ik-user"></i>
                                    <div class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Password)*@
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    <i class="ik ik-lock"></i>
                                    <div class="text-danger"></div>
                                </div>
                                <div class="row">
                                    <div class="col text-left">
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="item_checkbox" name="item_checkbox" value="option1">
                                            <span class="custom-control-label">&nbsp;Remember Me</span>
                                        </label>
                                    </div>
                                    <div class="col text-right">
                                        <a href="forgot-password.html">Forgot Password ?</a>
                                    </div>
                                </div>
                                <div class="sign-btn text-center">
                                    <button class="btn btn-theme">Sign In</button>
                                </div>
                        }
                            </div>
                     
                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script>window.jQuery || document.write('<script src="~/Template/src/js/vendor/jquery-3.3.1.min.js"><\/script>')</script>
        <script src="~/Template/plugins/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/Template/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/Template/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
        <script src="~/Template/plugins/screenfull/dist/screenfull.js"></script>
        <script src="~/Template/dist/js/theme.js"></script>
        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->

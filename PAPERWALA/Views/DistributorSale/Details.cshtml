@model IEnumerable<PAPERWALA.Models.DistributorSaleDTO>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Distributor Transaction With Retailer List </h5>
                    <span>Here you can see all transactions with retailers </span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3> Distributor Transaction List  | <span> @Html.ActionLink("Create Distributor Transaction", "Create", "DistributorTransavction", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div >
                    <table id="simpletable"class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Retailer</th>
                                <th>Paper</th>
                                <th>Price</th>
                                <th>Quant</th>
                                <th>Total</th>
                                <th>Pamt Qt</th>
                                <th>Pamt AMT</th>
                                <th>Pamt Bill</th>
                                <th>Final AMT</th>
                                <th>Paid AMT</th>
                                <th>Bal</th>
                                <th>prev Bal</th>
                                <th>Final Bal</th>
                                
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TransDate.ToShortDateString()</td>
                                        <td>@item.RetailerName</td>
                                        <td>@item.PaperName</td>
                                        <td>@item.PaperRate</td>
                                        <td>@item.PaperQuantity</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.PamphletQuantity</td>
                                        <td>@item.PamphletRate</td>
                                        <td>@item.TotalPamphletAmount</td>
                                        <td>@item.TotalFinalAmount</td>
                                        <td>@item.PaidAmount</td>
                                        <td>@item.BalanceAmount</td>
                                        <td>@item.PrvBalanceAmount</td>
                                        <td>@item.FinalBalaceAmount</td>
                                       
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.DistributorSaleId }, new { onclick = "return confirm('Are you sure you wish to delete this Transaction?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

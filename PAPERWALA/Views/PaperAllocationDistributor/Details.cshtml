@model IEnumerable<PAPERWALA.Models.PaperAllocationDistributorDTO>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Paper Allocation List With Distribuor</h5>
                    <span>Here you can see all Paper Allocation with Distributor and cityes</span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3> Paper Allocation  | <span> @Html.ActionLink("Create Paper Allocation ", "Create", "PaperAllocationDistributor", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Distributor</th>
                                <th>City</th>
                                <th>Paper</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DistributorName</td>
                                        <td>@item.CityName</td>
                                        <td>@item.PaperName</td>
                                       

                                       
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.PaperAllocateId }, new { onclick = "return confirm('Are you sure you wish to delete this Paper Allocation?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



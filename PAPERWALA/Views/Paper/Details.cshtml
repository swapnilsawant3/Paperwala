@model IEnumerable<PAPERWALA.Models.PaperDTO>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminMain.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-layers bg-red"></i>
                <div class="d-inline">
                    <h5>Paper Name List</h5>
                    <span>Here you can see all Paper with state and city</span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-block">
                <h3>  Paper Name List  | <span> @Html.ActionLink("Create Paper ", "Create", "Paper", new { @class = "btn btn-info btn-default" }) </span></h3>
            </div>
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable"
                           class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Paper Name</th>
                                <th>State Name</th>
                                <th>City Name</th>
                                <th>Language</th>
                                <th>Edit</th>
                                <th>Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PaperName</td>
                                        <td>@item.StateName</td>
                                        <td>@item.CityName</td>
                                        <td>@item.Language</td>
                                        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.PaperId })</td>
                                        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.PaperId }, new { onclick = "return confirm('Are you sure you wish to delete this City?');" })</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



